<%= simple_form_for goal do |f| %>
  <%= f.input :goal_type, label: "What type of goal do you want to work on?", as: :radio_buttons, collection: ["career", "health", "romance"] %>
  <%= f.input :status, label: "Where are you with your goal now? Be honest with yourself, this is a no-judgement space. ", as: :radio_buttons, collection: ["Thinking about goal", "Getting started on goal", "Making progress on goal", "Getting closer to goal", "Goal accomplished"] %>
  <%= f.input :name, label: "What do you want to call this goal?" %>
  <%= f.input :description, label: desc_label %>
  <%# <%= f.input :photo, as: :file %>
  <div class="d-flex justify-content-center">
  <%= f.submit "Add", class: "btn btn-primary", id: "form-button" %>
  </div>
<% end %>
