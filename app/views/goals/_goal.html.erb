<div class="col-4 mb-4">
  <div class="card-trip-index none-shadow">
    <% if goal.photo.attached? %>
      <%= link_to goal_path(goal) do %>
        <%= cl_image_tag goal.photo.key %>
      <% end %>
    <% else %>
      <%# <img src="./assets/images/demo-new-insight.jpg" /> %>
      <%= link_to goal_path(goal) do %>
        <%= image_tag "/assets/goal-page.jpg" %>
        <% end %>
    <% end %>
    <div class="card-trip-infos">
        <div class="">
          <h2><%= link_to goal.name, goal_path(goal.id), class: "goal-link" %></h2>
          <p><%= goal.description %></p>
        </div>
        <div class="">
          <%= goal.goal_icon.html_safe %>
        </div>
    </div>
  </div>
</div>
