<div class="collaborator-container-index">
<h1>Hi <%= @user.name %>,</h1>
<br>

<h2>Goals you are collaborating on:</h2>
<br>
<div class="d-flex">
  <% @collaborators.each do |collab| %>
    <div class="avatar-card">
      <p><%= collab.goal.user.name %></p>
      <img class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm">
      <p class="goal-link"><strong><%= link_to collab.goal.name, goal_path(collab.goal.id) %></strong></p>
    </div>
  <% end %>
  </div>
</div>
