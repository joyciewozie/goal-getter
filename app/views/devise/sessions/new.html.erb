<div class="login-page-container">

  <div class="login-form-container" >
    <h5 class="login-welcom-text"><strong>Welcome to Goal-getter</strong></h5>
    <br>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
    <div class="d-flex justify-content-center">
      <%= f.button :submit, "Log in", class: "btn btn-primary", id: "login-button" %>
    </div>
  <% end %>
  <br>
  <p>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %> for an account</p>
  </div>
  </div>
  <div class="login-image-container">
    <%= image_tag "goals-index.jpg", class: "login-image" %>
  </div>
