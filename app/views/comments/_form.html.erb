<%= simple_form_for([goal, insight, comment],
  data: {insert_in_list_target: "form",
  action: "submit->insert-in-list#send"
  }) do |f| %>
  <%= f.input :content, label: "What are your thoughts?" %>
  <div class="d-flex justify-content-center">
    <%= f.submit "Comment", class: "btn btn-primary", id: "comment-button" %>
  </div>
  <%= f.association :answer, as: :hidden, input_html: {
    value: answer.id
  } %>
<% end %>
